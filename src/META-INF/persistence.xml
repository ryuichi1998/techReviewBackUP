<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="mi2">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>Entity.AllocatedBed</class>
        <class>Entity.Appointment</class>
        <class>Entity.Bed</class>
        <class>Entity.BillInvoice</class>
        <class>Entity.Clinics</class>
        <class>Entity.ConsultationRecord</class>
        <class>Entity.Device</class>
        <class>Entity.FamilyMedicalBackground</class>
        <class>Entity.Medication</class>
        <class>Entity.Medisave</class>
        <class>Entity.Patient</class>
        <class>Entity.Product</class>
        <class>Entity.ProductRecord</class>
        <class>Entity.ServiceDescription</class>
        <class>Entity.Staff</class>
        <class>Entity.VitalSigns</class>
        <class>Entity.Ward</class>
        <class>Entity.HospitalLocation</class>
        <class>Entity.FaqrecordEntity</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mi2"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
        </properties>
    </persistence-unit>
</persistence>
